{
  "name": "pic2square-desktop",
  "version": "1.0.0",
  "description": "정방형 이미지 변환 데스크탑 애플리케이션",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "image",
    "resizer",
    "square",
    "converter"
  ],
  "author": "Pic2Square Team",
  "license": "MIT",
  "dependencies": {
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-icon-builder": "^2.0.1"
  },
  "build": {
    "appId": "com.pic2square.desktop",
    "productName": "Pic2Square",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/tests/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/README*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/docs/**/*",
      "!node_modules/**/example/**/*",
      "!node_modules/**/examples/**/*",
      "!node_modules/**/demo/**/*",
      "!node_modules/**/demos/**/*",
      "!node_modules/**/benchmark/**/*",
      "!node_modules/**/benchmarks/**/*",
      "!node_modules/**/coverage/**/*",
      "!node_modules/**/.nyc_output/**/*",
      "!node_modules/**/node_modules/**/*",
      "!dist",
      "!**/*.md"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*"
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "Pic2Square_${version}_macOS_Apple_Silicon.${ext}"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}